pragma solidity ^0.8.0;

contract MyToken {
    string public tokenName = "META";
    string public tokenAbbrv = "MTA";
    uint public totalSupply = 0;
    
    mapping(address => uint) public balances;
    mapping(address => uint) public transitIds;

    function mint(address _address, uint value, uint transitId) public {
        totalSupply += value;
        balances[_address] += value;
        transitIds[_address] = transitId;
    }
    
    function burn(address _address, uint value) public {
        if (balances[_address] >= value) {
            totalSupply -= value;
            balances[_address] -= value;
            transitIds[_address] = 0;
        }
    }

    function getTransitId(address _address) public view returns (uint) {
        return transitIds[_address];
    }
}
